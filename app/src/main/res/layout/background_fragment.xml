<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7c7c7"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/score_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="16dp"
        android:text="@string/Score_number"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/score_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="125" />


    <TextView
        android:id="@+id/score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="16dp"
        android:text="@string/score_title"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/score_number"
        app:layout_constraintStart_toEndOf="@+id/displayTimer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="30"
        android:textColor="#00ff00"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/score_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>